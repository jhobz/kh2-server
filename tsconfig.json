{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        
        "lib": ["ESNext"],
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
    },
    "include": ["./**/*.ts"],
    "exclude": ["./**/*.test.ts", "./**/*.config.ts"],
}